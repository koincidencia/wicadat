<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kazy.koincidencia.wicadat.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:rowCount="6"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rpmText"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="RPM"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/voltageText"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Voltage [V]"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tempText"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Temperature [Â°C]"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tempValue"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/rpmValue"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="534dp" />

        <TextView
            android:id="@+id/voltageValue"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/axValue"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text=""
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/ayValue"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text=""
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/azValue"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text=""
            android:textAlignment="center"
            android:textSize="36sp" />

        <Button
            android:id="@+id/calibButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Calibrate" />


    </GridLayout>

</android.support.constraint.ConstraintLayout>
